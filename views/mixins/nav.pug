mixin nav(user)
    if user
      nav
        div(id='nb-logo')
            p Creatures & Caves
        ul(class='nb-list')
            li(class=(page === 'index' ? 'nb-item nb-active' : 'nb-item'))
              a(href = (page === 'index' ? '#' : '/')) home
            li(class=(page === 'others' ? 'nb-item nb-active' : 'nb-item'))
              a(href = (page === 'others' ? '#' : '#')) others
            li(class=(page === 'campaigns' ? 'nb-item nb-active' : 'nb-item'))
              a(href = (page === 'campaigns' ? '#' : '/campaigns')) campaigns
            li(class=(page === 'map' ? 'nb-item nb-active' : 'nb-item'))
              a(href = (page === 'map' ? '#' : '/map')) map
            if user.username === 'admin'
              div(id='nb-profile')
                div(id='nb-profile-container')
                  div(id='nb-profile-pic')
                  p= "Admin"
                div(class="nb-profile-dropdown")
                  a(href = '/admin') Admin Tools
                  a(href = '/logout') Logout
            else 
              div(id='nb-profile')
                div(id='nb-profile-container')
                  div(id='nb-profile-pic')
                  p= user.username
                div(class="nb-profile-dropdown")
                  a(href = '/profile') Profile
                  a(href = '/logout') Logout
            li(class='nb-item')
    else
      nav
        div(id='nb-logo')
            p Creatures & Caves
        ul(class='nb-list')
            li(class=(page === 'index' ? 'nb-item nb-active' : 'nb-item'))
              a(href = (page === 'index' ? '#' : '/')) home
            li(class=(page === 'login' ? 'nb-item nb-active' : 'nb-item'))
              a(href = '/login') login
